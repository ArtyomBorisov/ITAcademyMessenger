<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="by.it.academy.homework_1.storage.hibernate.api.entity">
        <class>by.it.academy.homework_1.storage.hibernate.api.entity.UserEntity</class>
        <class>by.it.academy.homework_1.storage.hibernate.api.entity.MessageEntity</class>
        <class>by.it.academy.homework_1.storage.hibernate.api.entity.AuditUserEntity</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5433/messenger_hibernate?ApplicationName=messenger_hibernate" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="postgres" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="none" />
            <property name="hibernate.default_schema" value="app"/>
        </properties>

    </persistence-unit>

</persistence>
